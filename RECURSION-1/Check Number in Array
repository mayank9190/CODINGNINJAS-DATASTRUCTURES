public class Solution {
	
	public static boolean checkNumber(int input[], int x) {
        if(input.length==0){
            return false;
        }
		if(input[0]==x){
            return true;
        }
        
        
      
        int input1[]= new int[input.length-1];
        for(int i=1;i<input.length;i++){
            input1[i-1]= input[i];
           
        }
           boolean ans = checkNumber(input1,x);
        return ans;
        
        } 
        
        
	}
